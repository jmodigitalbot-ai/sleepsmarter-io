# Sleep Blueprint Generator Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3001
NODE_ENV=production

# Application URLs
BASE_URL=https://your-deployed-service.com

# Security
WEBHOOK_SECRET=your_kit_webhook_secret_here
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"

# Kit Configuration (Optional)
KIT_API_KEY=your_kit_api_key_here

# Puppeteer Configuration (Optional)
PUPPETEER_EXECUTABLE_PATH=/Applications/Google Chrome.app/Contents/MacOS/Google Chrome
# For production, you might need:
# CHROMIUM_PATH=/usr/bin/chromium-browser

# Storage Configuration
MAX_PDF_AGE_DAYS=30
CLEANUP_INTERVAL_HOURS=24

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/server.log

# Email Configuration (if implementing email sending directly)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM=hello@sleepsmarter.io

# Monitoring (Optional)
SENTRY_DSN=your_sentry_dsn_here